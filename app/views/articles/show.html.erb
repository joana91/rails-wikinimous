<h2><%= @article.title %>
<%= link_to  edit_article_path(@article.id), class:"pencil"  do %>
<i class="fa-solid fa-pencil"></i>
<% end %>
<%= link_to article_path(@article), method: :delete,
data: { confirm: "Are you sure?"}, class:"trash"  do %>
<i class="fa-solid fa-trash-can"></i>
<% end %>
</h2>
<p><%= @article.content %></p>
<%= link_to "Back to Home", articles_path %>
